@model CSI2441.A2.Web.MVC.Models.AddStudentViewModel
@{
    ViewBag.Title = "Manage Students";
    ViewBag.AddStudent = "Add Student";
    ViewBag.EditStudent = "Edit Student";
    ViewBag.DeleteStudent = "Delete Student";
}

<div class="jumbotron">
    <h2>@ViewBag.Title</h2>
    <p class="lead">
        Add, edit or delete student details here.
    </p>
</div>

@*Icon links*@

<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("AddStudent", "ManageStudent")">
            <img class="btn btn-default center" src="@Url.Content("~/Content/img/icons/add.png")"/>
        </a>
        <h3 class="text-center">
            @ViewBag.AddStudent
        </h3>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("EditStudent", "ManageStudent")">
            <img class="btn btn-default center" src="@Url.Content("~/Content/img/icons/edit.png")"/>
        </a>
        <h3 class="text-center">
            @ViewBag.EditStudent
        </h3>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("DeleteStudent", "ManageStudent")">
            <img class="btn btn-default center" src="@Url.Content("~/Content/img/icons/delete.png")" />
        </a>
        <h3 class="text-center">
            @ViewBag.DeleteStudent
        </h3>
    </div>
</div>