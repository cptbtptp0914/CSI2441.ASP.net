
@{
    ViewBag.Title = "Register New User";
}

@*<h2>@ViewBag.Title</h2>*@
@*<hr/>*@

<div class="jumbotron">
    <div class="row">
        <div class="col-md-2">
            <img src="@Url.Content("~/Content/img/icons/newuser.png")" />
        </div>
        <div class="col-md-10">
            <h2>@ViewBag.Title</h2>
            <p class="lead">
                Staff or Student must exist in table before registering
            </p>
        </div>
    </div>
</div>

<hr/>

<div class="row vert-gap">
    <div class="col-md-6">
        @*Staff register*@
        @Html.Partial("~/Views/Shared/_StaffRegisterPartial.cshtml")
    </div>
    <div class="col-md-6 vert-rule-left">
        @*Student register*@
        @Html.Partial("~/Views/Shared/_StudentRegisterPartial.cshtml")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}