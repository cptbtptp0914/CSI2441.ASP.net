@using System.Web.Configuration
@{
    ViewBag.Title = "University Manager";
    ViewBag.ManageStudents = "Manage Students";
    ViewBag.ManageUnits = "Manage Units";
    ViewBag.ManageCourses = "Manage Courses";
    ViewBag.ManageResults = "Manage Results";
    ViewBag.Author = "Martin Ponce, ID 10371381";
}

@*Blurb*@

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">
        This web application allows a user to manage university student, unit, and course records. It also allows the user to manage and monitor student results and progress.
        Information is stored in a local <a href="@Url.Action("About", "Home")">SQLite</a> database which is manipulated by the application.
    </p>
    <p class="lead">
        Written in C# ASP.NET MVC5 using Visual Studio 2015.
    </p>

    <h5>
        @ViewBag.Author
    </h5>
</div>

@*Icon links*@

<div class="row">
    <div class="col-md-3">
        <a href="@Url.Action("Index", "Student")">
            <img class="btn btn-default center" src="@Url.Content("~/Content/img/icons/student.png")"/>
        </a>
        <h3 class="text-center">
            @ViewBag.ManageStudents
        </h3>
    </div>
