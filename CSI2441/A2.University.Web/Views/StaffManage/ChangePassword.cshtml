@model A2.University.Web.Models.StaffChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutStaffPortal.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangePassword", "StaffManage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr/>
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-horizontal">

        @*Old password*@

        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new {@class = "col-md-2 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.OldPassword, new {@class = "form-control", placeholder = "Required"})
            </div>
            <div class="col-md-6">
                @Html.ValidationMessageFor(m => m.OldPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        @*New password*@

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.NewPassword, new {@class = "form-control", placeholder = "Required"})
            </div>
            <div class="col-md-6">
                @Html.ValidationMessageFor(m => m.NewPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        @*Confirm password*@

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "Required"})
            </div>
            <div class="col-md-6">
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        @*Buttons*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" class="btn btn-default" value="Change password" />
                <a class="btn btn-default span-btn-cancel" href="@Url.Action("Index", "StaffManage")">Cancel</a>
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}