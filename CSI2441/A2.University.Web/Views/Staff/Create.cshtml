@using System.Runtime.ExceptionServices
@model A2.University.Web.Models.Entities.Staff

@{
    ViewBag.Title = "Create New Staff";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter new staff details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*First name *@

        <div class="form-group">
            @Html.LabelFor(model => model.firstname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "Required" } })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Surname*@

        <div class="form-group">
            @Html.LabelFor(model => model.surname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control", placeholder = "Required" } })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Email*@

@*        Email will be generated by app! Do not allow user to add themselves.*@
@*        <div class="form-group">*@
@*            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })*@
@*            <div class="col-md-10">*@
@*                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })*@
@*                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })*@
@*            </div>*@
@*        </div>*@

        @*Buttons*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <a class="btn btn-default span-btn-cancel" href="@Url.Action("Index", "Staff")">Cancel</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
