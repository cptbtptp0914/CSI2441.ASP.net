@model A2.University.Web.Models.Entities.Unit

@{
    ViewBag.Title = "Edit Unit";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit unit details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.unit_id)

        @*Unit ID*@

        <div class="form-group">
            @Html.LabelFor(model => model.unit_id, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                @Html.EditorFor(model => model.unit_id, new {htmlAttributes = new {@class = "form-control"}})
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.title, "", new {@class = "text-danger"})
            </div>
        </div>

        @*Title*@

        <div class="form-group">
            @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Coordinator*@

        <div class="form-group">
            @Html.LabelFor(model => model.coodinator_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.coodinator_id, ViewBag.coordinator_id as SelectList, "Select Coordinator", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.coodinator_id, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Credit points*@

        <div class="form-group">
            @Html.LabelFor(model => model.credit_points, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.credit_points, new List<SelectListItem>
                {
                    new SelectListItem {Text = "15", Value = "15"},
                    new SelectListItem {Text = "20", Value = "20"},
                    new SelectListItem {Text = "60", Value = "60"}
                }, "Select Credit Points", new {@class = "form-control"})
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.credit_points, "", new {@class = "text-danger"})
            </div>
        </div>

        @*Coordinator*@
        @*TODO: Fix value not being passed to dropdownlist, debug shows value is being pulled, but does not appear in view*@

        <div class="form-group">
            @Html.LabelFor(model => model.unit_type_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.unit_type_id, ViewBag.unit_type_id as SelectList, "Select Unit Type", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.unit_type_id, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Buttons*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a class="btn btn-default span-btn-cancel" href="@Url.Action("Index", "Unit")">Cancel</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
