                <p class="form-display">@Html.DisplayFor(model => model.adrs_city)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.adrs_state, htmlAttributes: new {@class = "control-label col-md-2"})
