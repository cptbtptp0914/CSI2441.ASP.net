@model A2.University.Web.Models.UnitEnrolmentDeleteViewModel

@{
    ViewBag.Title = "Delete Unit Enrolment";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Are you sure you want to delete this unit enrolment?</h3>
        <hr/>

        @*Student ID*@

        <div class="form-group">
            @Html.LabelFor(model => model.StudentId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.StudentId)</p>
            </div>
        </div>

        @*Student full name*@

        <div class="form-group">
            @Html.LabelFor(model => model.StudentFullName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.StudentFullName)</p>
            </div>
        </div>

        @*Unit ID*@

        <div class="form-group">
            @Html.LabelFor(model => model.UnitId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.UnitId)</p>
            </div>
        </div>

        @*Unit Title*@

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.Title)</p>
            </div>
        </div>

        @*Year/sem*@

        <div class="form-group">
            @Html.LabelFor(model => model.YearSem, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.YearSem)</p>
            </div>
        </div>

        @*Mark*@

        <div class="form-group">
            @Html.LabelFor(model => model.Mark, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.Mark)</p>
            </div>
        </div>

        @*Grade*@

        <div class="form-group">
            @Html.LabelFor(model => model.Grade, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.Grade)</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 button-top-gap">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-default span-btn-cancel" href="@Url.Action("Index", "UnitEnrolment")">Cancel</a>
            </div>
        </div>
    </div>
}
