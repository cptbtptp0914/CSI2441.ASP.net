@model A2.University.Web.Models.CourseEnrolmentCreateViewModel

@{
    ViewBag.Title = "Create New Course Enrolment";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Enter new course enrolment details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*Student ID*@

        <div class="form-group">
            @Html.LabelFor(model => model.student_id, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.student_id, Model.StudentDropDownList, "Select Student", new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.student_id, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Course ID*@

        <div class="form-group">
            @Html.LabelFor(model => model.course_id, new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                @Html.DropDownListFor(model => model.course_id, Model.CourseDropDownList, "Select Unit", new {@class = "form-control"})
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.course_id, "", new {@class = "text-danger"})
            </div>
        </div>

        @*Buttons*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <a class="btn btn-default span-btn-cancel" href="@Url.Action("Index", "CourseEnrolment")">Cancel</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
