@model IEnumerable<A2.University.Web.Models.CourseIndexViewModel>
@using GridMvc.Html

@{
    ViewBag.Title = "Manage Courses";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-2">
            <img src="@Url.Content("~/Content/img/icons/course.png")"/>
        </div>
        <div class="col-md-10">
            <h2>@ViewBag.Title</h2>
            <p class="lead">
                Add, edit or delete courses
            </p>
        </div>
    </div>
</div>

<div class="row vert-gap">
    <div class="col-md-12">
        <span>
            <a href="@Url.Action("Create", "Course")">Create New Course</a>
        </span>
    </div>
</div>

@*
    Grid.Mvc package generates the grid.
    Provides filtering/sorting functions.
    20 items per page.
*@

@Html.Grid(Model).Columns(columns =>
{
    // course id
    columns.Add(data => data.course_id)
        .Titled("Course ID")
        .Filterable(true)
        .SetFilterWidgetType("System.Int32");
    // title
    columns.Add(data => data.title)
        .Titled("Title")
        .Filterable(true)
        .SetFilterWidgetType("System.String");
    // coordinator
    columns.Add(data => data.coordinator_name)
        .Titled("Coordinator")
        .Filterable(true)
        .SetFilterWidgetType("System.String");
    // course type
    columns.Add(data => data.course_type_title)
        .Titled("Course Type")
        .Filterable(true)
        .SetFilterWidgetType("System.String");
    // credit points
    columns.Add(data => data.credit_points)
        .Titled("CP")
        .Filterable(true)
        .SetFilterWidgetType("System.Int32");
    // duration
    columns.Add(data => data.duration)
        .Titled("Duration (months)")
        .Filterable(true)
        .SetFilterWidgetType("System.Int32");
    // view
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(data => Html.ActionLink("View", "Details", new { id = data.course_id }));
    // edit
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(data => Html.ActionLink("Edit", "Edit", new { id = data.course_id }));
    // delete
    columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(data => Html.ActionLink("Delete", "Delete", new { id = data.course_id }));
}).WithPaging(20).Sortable(true)