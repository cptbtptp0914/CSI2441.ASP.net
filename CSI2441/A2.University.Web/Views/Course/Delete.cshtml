@model A2.University.Web.Models.Entities.Course

@{
    ViewBag.Title = "Delete Course";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Are you sure you want to delete this course?</h3>
        <hr/>

        <div class="form-group">
            @Html.LabelFor(model => model.course_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.course_id)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.title)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Staff.fullname, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.Staff.fullname)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseType.title, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.CourseType.title)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseType.credit_points, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.CourseType.credit_points)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CourseType.duration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <p class="form-display">@Html.DisplayFor(model => model.CourseType.duration)</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 button-top-gap">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-default span-btn-cancel" href="@Url.Action("Index", "Course")">Cancel</a>
            </div>
        </div>
    </div>
}
